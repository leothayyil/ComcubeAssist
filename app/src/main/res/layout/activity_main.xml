<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.salestracker.MainActivity">



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopInput"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/EdtShopNmae"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="shop_name" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopInput"
        android:layout_marginTop="50dp"
        android:id="@+id/textInputLayout">

        <EditText
            android:id="@+id/EdtFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="feedback"
            android:inputType="text|textMultiLine"
            android:textColor="#000000" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submitBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#051066"
        android:textColor="#fff"
        android:layout_below="@+id/textInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="button" />

</RelativeLayout>
